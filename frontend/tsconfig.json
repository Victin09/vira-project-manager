{
    "compilerOptions": {
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "ES2015",
        "target": "ES5",
        "jsx": "react",
        "resolveJsonModule": true,
        "lib": [
            "esnext",
            "dom"
        ],
        "allowJs": true,
        "baseUrl": "./",
        "paths": {
            "@common/*": [
                "src/common/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@views/*": [
                "src/views/*"
            ],
        },
    },
    "exclude": [
        "node_modules",
        "dist",
    ]
}