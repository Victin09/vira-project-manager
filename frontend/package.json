{
    "name": "react-typescript-jest-boilerplate",
    "version": "1.0.2",
    "description": "Boilerplate for React app with Typescript and Jest",
    "main": "index.js",
    "scripts": {
        "start": "npm run build:css && webpack-dev-server --mode development --config ./webpack.config.js",
        "build:css": "npx postcss src/styles/tailwind.css -o src/styles/index.css",
        "build": "npm run build:css && webpack --mode production --config ./webpack.config.js",
        "lint": "npm run lint:code && npm run lint:style",
        "lint:code": "eslint src/**/*.{js,ts,tsx} --fix --quiet",
        "lint:style": "stylelint src/**/*.scss --fix",
        "test": "jest --config=jest.config.js",
        "test:watch": "jest --config=jest.config.js --watch",
        "test:coverage": "jest --config=jest.config.js --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Victin09/vira-cli.git"
    },
    "keywords": [
        "react",
        "typescript",
        "javascript",
        "jest",
        "boilerplate"
    ],
    "author": "viti",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/Victin09/vira-cli/issues"
    },
    "homepage": "https://github.com/Victin09/vira-cli/src/templates/react#readme",
    "lint-staged": {
        "*.{js,ts,tsx}": [
            "eslint --fix"
        ]
    },
    "devDependencies": {
        "@types/jest": "^25.2.3",
        "@types/react": "^16.14.2",
        "@types/react-beautiful-dnd": "^13.1.2",
        "@types/react-dom": "^16.9.10",
        "@types/react-router-dom": "^5.1.6",
        "@types/react-select": "^4.0.17",
        "@types/react-test-renderer": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^3.10.1",
        "@typescript-eslint/parser": "^3.10.1",
        "autoprefixer": "^10.3.1",
        "css-loader": "^3.6.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.14.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-css-modules": "^2.11.0",
        "eslint-plugin-prettier": "^3.2.0",
        "eslint-plugin-react": "^7.21.5",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^4.5.0",
        "husky": "^4.3.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^26.6.3",
        "mini-css-extract-plugin": "^0.9.0",
        "postcss": "^8.3.6",
        "postcss-cli": "^8.3.1",
        "postcss-loader": "^6.1.1",
        "postcss-preset-env": "^6.7.0",
        "prettier": "^2.2.1",
        "react-test-renderer": "^16.14.0",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.3.0",
        "stylelint": "^13.8.0",
        "stylelint-config-sass-guidelines": "^7.1.0",
        "tailwindcss": "^2.2.7",
        "ts-jest": "^26.5.0",
        "ts-loader": "^7.0.5",
        "typescript": "^3.9.7",
        "webpack": "^5.47.1",
        "webpack-cli": "^4.7.2",
        "webpack-dev-server": "^4.3.0"
    },
    "dependencies": {
        "dotenv-webpack": "^7.0.3",
        "react": "^16.14.0",
        "react-beautiful-dnd": "^13.1.0",
        "react-cookie": "^4.1.1",
        "react-dom": "^16.14.0",
        "react-icons": "^4.2.0",
        "react-router-dom": "^5.2.0",
        "react-select": "^4.3.1"
    }
}
